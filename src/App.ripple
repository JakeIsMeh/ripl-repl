import { init_monaco } from './monaco'

import {effect} from 'ripple'

export component App() {
	let editor;

	try { editor = await init_monaco() } async {}
	effect(async () => {
		return () => { editor.dispose() }
	})

	<div id="editor" class="w-100vw h-100vh border-0" />

	// <iframe id="sandbox" class="w-100vw h-100vh border-0" sandbox="allow-scripts allow-forms allow-modals" />

	<style>
		#editor {
			min-width: 100vw;
			min-height: 100vh;
		}
	</style>
}