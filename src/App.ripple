import { init_monaco } from './monaco'

import {effect} from 'ripple'

export component App() {
	let editor;

	try { editor = await init_monaco() } async {}
	effect(async () => {
		return () => { editor.dispose() }
	})

	<div class="d-flex">
		<div id="editor" class="pane"/>
		<iframe id="sandbox" class="pane" sandbox="allow-scripts allow-forms allow-modals" />
	</div>

	<style>
		.pane {
			width: 50vw;
			height: 100vh;
		}
		.d-flex {
			display:flex;
		}
	</style>
}